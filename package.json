{
  "name": "terraform-hcloud-immich",
  "version": "0.0.0-development",
  "description": "Terraform module for cost-effective Immich deployment on Hetzner Cloud with unlimited photo storage via Backblaze B2",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreimerfu/terraform-hcloud-immich.git"
  },
  "keywords": [
    "terraform",
    "module",
    "immich",
    "hetzner-cloud",
    "backblaze-b2",
    "juicefs",
    "photos",
    "self-hosted",
    "infrastructure-as-code"
  ],
  "author": "andreimerfu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andreimerfu/terraform-hcloud-immich/issues"
  },
  "homepage": "https://github.com/andreimerfu/terraform-hcloud-immich#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "semantic-release": "^22.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "*.tf",
    "*.sh",
    "examples/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {"type": "feat", "release": "minor"},
            {"type": "fix", "release": "patch"},
            {"type": "perf", "release": "patch"},
            {"type": "docs", "release": "patch"},
            {"breaking": true, "release": "major"}
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "CHANGELOG.md",
              "label": "Changelog"
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}